<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:id="@+id/Textviewa"
            android:background="@drawable/back"></TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:id="@+id/Textviewb"
            android:background="@drawable/back"></TextView>

        <TextView
            android:id="@+id/Textviewc"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="@drawable/back"></TextView>

        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:id="@+id/Textviewd"
            android:background="@drawable/back"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:id="@+id/Textviewe"
                    android:gravity="center"
                    android:background="@drawable/back"></TextView>

                <TextView
                    android:id="@+id/Textviewf"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:background="@drawable/back"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:id="@+id/Textviewg"
                    android:gravity="center"
                    android:background="@drawable/back"
                    ></TextView>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:id="@+id/Textviewh"
                    android:gravity="center"
                    android:background="@drawable/back"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:id="@+id/Textviewi"
                    android:gravity="center"
                    android:background="@drawable/back"></TextView>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:id="@+id/Textviewk"
                    android:gravity="center"
                    android:background="@drawable/back"></TextView>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Drive"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>